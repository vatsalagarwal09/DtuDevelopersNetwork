<% include partials/header %>


	<div class="container">
    	<div class="cardcss card" style="margin-top: 5%; background-color: rgb(232,236,239);">
        	<h1 style="text-align: center; margin-top: 2%; color:#2C5197;">Login</h1>
        	<div style="width: 50%; margin: 3% auto;">
            	<form action="/login" method="POST">
                	<div class="form-group">
                    	<input class="inputcss form-control" type="text" name="username" placeholder="Username" required>
                	</div>
                	<div class="form-group">
                    	<input id="pass" class="form-control" type="password" name="password" placeholder="Password" required>
                	</div>
                	<div class="form-group">
                    	<input class="checkboxcss" type="checkbox" onclick="toggleVisibility()">Show password
                    	</div>
                	<div class="form-group">
                    	<button class="btn btn-lg btn-primary btn-block hvr-sweep-to-right">Login</button>
                	</div>
                    <div class="form-group">
                        <label style="color:#2C5197;">Not registered? <a href="/signup">Sign up</a></label>
                    </div>
            	</form>
            	<a href="/">Go Back</a>
        	</div>
    	</div>
	</div>

</body>
<script type="text/javascript">
	function toggleVisibility() {
  		var x = document.getElementById("pass");
  		if (x.type === "password") {
    		x.type = "text";
  		} else {
    		x.type = "password";
  		}
	}
</script>
</html>