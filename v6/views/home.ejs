<% include partials/header %>
	<div class="container tableContainer">
		<table>
			<thead class="container">
				<tr class="row">
					<th class="col-lg-1"></th>
					<th class="col-lg-7" id="subjectTH">Subject</th>
					<th class="col-lg-3" id="nameTH"></th>
					<th class="col-lg-1"></th>
				</tr>
			</thead>

			<tbody>
				<% for(var i=posts.length-1; i>=0; i--){ %>
				<tr class="row">
					<td class="col-lg-1 dateTD"><%= posts[i].day + "/" + posts[i].month %></td>
					<td class="col-lg-7 subjectTD"><%= posts[i].subject %></td>
					<td class="col-lg-3 nameTD">
						<div class="card" style="width: 3.5rem;">
  							<img src="<%= "/profileimages/" + posts[i].username  + ".jpg" %>" class="card-img-top" alt="...">
  						</div>
  						<p class="names"><%= posts[i].fullname %></p>
					</td>
					<td class="col-lg-1 praiseTD">
						<p class="praiseIcon"><i class="fas fa-award"></i></p>
						<p class="praiseNumber"><%= posts[i].praises %></p>
					</td>
				</tr>
				<% }; %>
			</tbody>

		</table>

